{
  "model": {
    "variant": "standard",
    "hidden_dims": [
      64,
      128,
      256,
      512
    ],
    "image_size": 128
  },
  "training": {
    "epochs": 50,
    "batch_size": 32,
    "learning_rate": 0.001,
    "use_cifar": true,
    "mixed_precision": true,
    "early_stopping_patience": 15
  },
  "optimization": {
    "optimizer": "AdamW",
    "scheduler": "CosineAnnealingLR",
    "weight_decay": 0.01,
    "gradient_clipping": 1.0
  },
  "loss_weights": {
    "alpha": 1.0,
    "beta": 1.0,
    "gamma": 0.1,
    "perceptual": 0.1
  }
}